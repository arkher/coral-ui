{
  "name": "coral-ui",
  "version": "0.1.35",
  "description": "React Native component library using Shopify's Restyle",
  "author": "Design System",
  "keywords": [
    "components",
    "react-native-components"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "expo:web": "expo start --web",
    "web": "start-storybook -p 6006 -c ./.storybook",
    "build": "rm -rf dist && rollup -c",
    "prepare": "rm -rf dist && rollup -c",
    "build-storybook": "build-storybook",
    "test:unit": "jest",
    "lint": "eslint",
    "format": "prettier *.{js,tsx} -w",
    "commit": "git-cz",
    "generate:component": "plop --plopfile ./src/generators/plopfile.js component",
    "release": "semantic-release",
    "storybook": "start-storybook",
    "clean": "rm -rf dist && rm -rf node_modules"
  },
  "peerDependencies": {
    "react": ">=16.x",
    "react-dom": ">=16.x",
    "react-native": "*"
  },
  "dependencies": {
    "@shopify/restyle": "^1.4.0",
    "react-native-vector-icons": "^8.1.0",
    "typeface-inter": "^3.18.1"
  },
  "devDependencies": {
    "@babel/core": "7.15.8",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@expo/webpack-config": "^0.16.3",
    "@react-native-community/eslint-config": "^2.0.0",
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@storybook/addon-a11y": "^6.3.12",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-docs": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-knobs": "^6.3.1",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/addon-ondevice-actions": "^5.3.23",
    "@storybook/addon-ondevice-knobs": "^5.3.25",
    "@storybook/addons": "~6.3.12",
    "@storybook/react": "~6.3.12",
    "@storybook/react-native": "~5.3.25",
    "@storybook/ui": "^6.3.12",
    "@types/jest": "^27.0.2",
    "@types/react": "~16.9.41",
    "@types/react-dom": "~16.9.8",
    "@types/react-native": "~0.62.13",
    "@types/react-native-vector-icons": "^6.4.9",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "babel-loader": "^8.0.6",
    "babel-preset-expo": "^8.4.1",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.0",
    "eslint-plugin-react-native-a11y": "^2.0.2",
    "expo": "^42.0.4",
    "expo-constants": "^11.0.1",
    "expo-font": "^9.2.1",
    "expo-linear-gradient": "^9.2.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jest-expo": "^38.0.2",
    "plop": "^2.7.6",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-native": "https://github.com/expo/react-native/archive/sdk-42.0.0.tar.gz",
    "react-native-web": "0.17.5",
    "react-test-renderer": "^16.13.1",
    "rollup": "^2.8.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.27.0",
    "semantic-release": "^17.1.2",
    "storybook-addon-designs": "^6.2.0",
    "typeface-public-sans": "^1.1.13",
    "typescript": "~4.0.0"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|react-clone-referenced-element|@react-native-community|expo(nent)?|@expo(nent)?/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|@sentry/.*)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/__mocks__/globalMock.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branch": "master",
    "npmPublish": false,
    "ci": false,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/changelog",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "dist/**/*.{js,ts}",
            "package.json",
            "package-lock.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} \n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
