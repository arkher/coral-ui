{
  "name": "@ds/mobile",
  "version": "0.1.0",
  "description": "Biblioteca de components criada pelo Design System para os produtos da Pulse criada em react-native",
  "author": "Design System",
  "keywords": [
    "components",
    "react-native-components"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "expo:web": "expo start --web",
    "web": "start-storybook -p 6006 -c ./.storybook",
    "build": "rm -rf dist && rollup -c",
    "prepare": "rm -rf dist && rollup -c",
    "build-storybook": "build-storybook",
    "test": "jest",
    "lint": "eslint",
    "format": "prettier *.{js,tsx} -w",
    "commit": "git-cz",
    "generate:component": "plop --plopfile ./src/generators/plopfile.js component",
    "release": "semantic-release",
    "storybook": "start-storybook",
    "clean": "rm -rf dist && rm -rf node_modules"
  },
  "peerDependencies": {
    "react": ">=16.x",
    "react-dom": ">=16.x",
    "react-native": "*"
  },
  "dependencies": {
    "@shopify/restyle": "^1.4.0",
    "react-native-reanimated": "^2.2.4",
    "react-native-vector-icons": "^8.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@expo-google-fonts/public-sans": "^0.2.0",
    "@expo/webpack-config": "^0.16.2",
    "@react-native-community/eslint-config": "^2.0.0",
    "@react-navigation/native": "^6.0.6",
    "@react-navigation/native-stack": "^6.2.5",
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@storybook/addon-a11y": "^6.3.12",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-docs": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-knobs": "^6.3.1",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/addon-ondevice-actions": "^5.3.23",
    "@storybook/addon-ondevice-knobs": "^5.3.25",
    "@storybook/addons": "~6.3.12",
    "@storybook/react": "~6.3.12",
    "@storybook/react-native": "~5.3.25",
    "@storybook/ui": "^6.3.12",
    "@testing-library/jest-native": "^4.0.4",
    "@testing-library/react-native": "^8.0.0",
    "@types/jest": "^27.0.2",
    "@types/react": "~17.0.21",
    "@types/react-dom": "~17.0.9",
    "@types/react-native": "~0.64.12",
    "@types/react-native-vector-icons": "^6.4.9",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "add": "^2.0.6",
    "babel-loader": "^8.0.6",
    "babel-preset-expo": "8.5.1",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.0",
    "eslint-plugin-react-native-a11y": "^2.0.2",
    "expo": "^43.0.0",
    "expo-constants": "~12.1.3",
    "expo-font": "~10.0.3",
    "expo-linear-gradient": "~10.0.3",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jest-expo": "^43.0.0",
    "plop": "^2.7.6",
    "prettier": "^2.4.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-native": "0.64.3",
    "react-native-safe-area-context": "3.3.2",
    "react-native-screens": "~3.8.0",
    "react-native-web": "0.17.1",
    "react-test-renderer": "^16.13.1",
    "rollup": "^2.8.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.27.0",
    "semantic-release": "^17.1.2",
    "storybook-addon-designs": "^6.2.0",
    "ts-jest": "^26.4.2",
    "typeface-inter": "^3.18.1",
    "typeface-public-sans": "^1.1.13",
    "typescript": "~4.3.5",
    "yarn": "^1.22.17"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.jest.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$"
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branch": "master",
    "npmPublish": false,
    "ci": false,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/changelog",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "dist/**/*.{js,ts}",
            "package.json",
            "package-lock.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} \n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
